      [AssignStmt("c", OrExpr(AndExpr(Variable("d"), Variable("e")), OrExpr(Variable("f"), NotExpr(Variable("g")))))],
      [AssignStmt("d", CompareChain(Variable("x"), Cons((Less(), IntLiteral(5)), Cons((LessEqual(), IntLiteral(10)), Nil()))))]
